extends layout.pug

block content

    .main-container
        form(method = 'POST')
            div.form-group
                label(for = 'username') Username:
                input#username.form-control(type = "text", name = "username")

            div.form-group
                label(for = 'password') Password:
                input#password.form-control(type = "password")

            if message
            h3.message #{message}

            button.btn.btn-primary(type = "submit") Sign In
