extends layout

block content

  .main.container
    .row
      .col-md-6.col-md-offset-3

        h1.display-4.m-b-2.text-center Sign Up

        // register form
        form(method='POST' action='/signup')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='name' name='name')
          div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='username' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='gender') Gender:
            input#gender.form-control(type='text', placeholder='male/female' name='gender')
          div.form-group
            label(for='age') Age:
            input#age.form-control(type='text', placeholder='age' name='age')
          div.form-group
            label(for='Phone') Phone:
            input#phone.form-control(type='text', placeholder='phone' name='phone')
          div.form-group
            label(for='govtId') Government Id:
            input#govtId.form-control(type='text', placeholder='govtId' name='govtId')
          input.btn.btn-info(type='submit' name="submit")
