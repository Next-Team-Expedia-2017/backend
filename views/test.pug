extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
      
        h1.display-4.m-b-2.text-center Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Name' name='name')
          div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='username' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='Gender') Username:
            input#gender.form-control(type='text', placeholder='male/female/other' name='gender')
          div.form-group
            label(for='Age') Username:
            input#age.form-control(type='text', placeholder='Age' name='age')
          div.form-group
            label(for='govtID') Username:
            input#govtID.form-control(type='text', placeholder='govtID' name='govtID')
        button.btn.btn-primary(type='submit') Sign Up
